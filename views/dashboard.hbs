<h6>Dashboard</h6>
<h3>Weclome {{name}}</h3>
<p>Here are your Stories</p>
{{#if stories}}
    <table class="striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each stories}}
                <tr>
                    <td><a href="/stores/{{_id}}">{{title}}</a></td>
                    <td>{{createAt}}</td>
                    <td><span class="dash-status">{{status}}</span></td>
                    <td></td>
                </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
    <p>No stories yet</p>
{{/if}}